<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alexis_quiz_gsi.MainActivity" >

    <Button
        android:id="@+id/quitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/statistiques"
        android:layout_marginBottom="20dp"
        android:text="Quitter" />

    <Button
        android:id="@+id/aPropos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quitter"
        android:layout_alignBottom="@+id/quitter"
        android:layout_alignParentLeft="true"
        android:text="A propos" />

    <Button
        android:id="@+id/statistiques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/evaluer"
        android:layout_alignParentRight="true"
        android:text="Statistiques" />

    <Button
        android:id="@+id/evaluer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aPropos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Evaluer" />

    <Button
        android:id="@+id/jouer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/evaluer"
        android:layout_alignLeft="@+id/imageView1"
        android:text="Jouer" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/font" />

</RelativeLayout>
